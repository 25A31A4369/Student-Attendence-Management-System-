#include <stdio.h>

struct student{
    int roll,att;
    char name[20];
};

int main(){
    struct student s[50];
    int n,i,ch,r;

    printf("Enter number of students: ");
    scanf("%d",&n);

    for(i=0;i<n;i++){
        printf("Roll: ");
        scanf("%d",&s[i].roll);
        printf("Name: ");
        scanf(" %s",s[i].name);
        s[i].att=0;
    }

    while(1){
        printf("\n1.Mark Attendance  2.View  3.Exit\n");
        scanf("%d",&ch);

        if(ch==1){
            printf("Enter roll no: ");
            scanf("%d",&r);
            for(i=0;i<n;i++)
                if(s[i].roll==r){
                    printf("1-Present 0-Absent: ");
                    scanf("%d",&s[i].att);
                }
        }
        else if(ch==2){
            printf("\nRoll Name Attendance\n");
            for(i=0;i<n;i++)
                printf("%d %s %s\n",
                s[i].roll,s[i].name,
                s[i].att?"Present":"Absent");
        }
        else break;
    }
    return 0;
}
